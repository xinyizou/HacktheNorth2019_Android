<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rehab"
            android:textColor="@color/colorDark"
            android:textSize="70dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:fontFamily="@font/architects_daughter"/>

    <ScrollView
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width= "match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:id="@+id/rehabtensiongraph"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="4dp"
                    android:paddingHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                <TextView
                        android:gravity="bottom"
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar0"/>
                <TextView
                        android:gravity="bottom"
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar1"/>
                <TextView
                        android:gravity="bottom"
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar2"/>
                <TextView
                        android:gravity="bottom"
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar3"/>
                <TextView
                        android:gravity="bottom"
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar4"/>
                <TextView
                        android:gravity="bottom"
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar5"/>
                <TextView
                        android:gravity="bottom"
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar6"/>
                <TextView
                        android:gravity="bottom"
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar7"/>
                <TextView
                        android:gravity="bottom"
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar8"/>
                <TextView
                        android:gravity="bottom"
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar9"/>

            </LinearLayout>

            <TextView
                    app:layout_constraintTop_toBottomOf="@+id/rehabtensiongraph"
                    android:id="@+id/tensiontext"
                    android:text=""
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimaryBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    app:layout_constraintTop_toBottomOf="@+id/tensiontext"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:id="@+id/rehabpressuregraph"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="4dp"
                    android:paddingHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                <TextView
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:gravity="bottom"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar0"/>
                <TextView
                        android:gravity="bottom"
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar1"/>
                <TextView
                        android:gravity="bottom"
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar2"/>
                <TextView
                        android:gravity="bottom"
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar3"/>
                <TextView
                        android:gravity="bottom"
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar4"/>
                <TextView
                        android:gravity="bottom"
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar5"/>
                <TextView
                        android:gravity="bottom"
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar6"/>
                <TextView
                        android:gravity="bottom"
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar7"/>
                <TextView
                        android:gravity="bottom"
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar8"/>
                <TextView
                        android:gravity="bottom"
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar9"/>

            </LinearLayout>

            <TextView
                    app:layout_constraintTop_toBottomOf="@+id/rehabpressuregraph"
                    android:id="@+id/posturetext"
                    android:text=""
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimaryBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>