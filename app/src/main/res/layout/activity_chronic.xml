<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        tools:context=".MainActivity">


    <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chronic"
            android:textColor="@color/colorDark"
            android:textSize="70dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:fontFamily="@font/architects_daughter"/>

    <ScrollView
            app:layout_constraintTop_toBottomOf="@id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width= "match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:id="@+id/rehabtensiongraph"
                    android:layout_marginVertical="1dp"
                    android:layout_marginHorizontal="4dp"
                    android:paddingHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar0"/>
                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar1"/>
                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar2"/>
                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar3"/>
                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar4"/>
                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar5"/>
                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar6"/>
                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar7"/>
                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar8"/>
                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/bar9"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:id="@+id/rehabpressuregraph"
                    android:layout_marginVertical="1dp"
                    android:layout_marginHorizontal="4dp"
                    android:paddingHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar0"/>
                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar1"/>
                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar2"/>
                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar3"/>
                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar4"/>
                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar5"/>
                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar6"/>
                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar7"/>
                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar8"/>
                <View
                        android:layout_marginHorizontal="1dp"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pbar9"/>

            </LinearLayout>

            <Button
                    android:id="@+id/chronic"
                    android:layout_marginVertical="1dp"
                    android:text="Chronic"
                    android:textColor="@color/colorLight"
                    android:textSize="60dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_weight="9"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/open_sans_semibold"
                    android:layout_height="0dp"/>

            <Button
                    android:id="@+id/chat"
                    android:text="Chat"
                    android:textSize="40dp"
                    android:textColor="@color/colorLight"
                    android:layout_marginVertical="1dp"
                    android:backgroundTint="@color/colorPrimaryBlack"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:fontFamily="@font/open_sans_semibold"/>

            <Button
                    android:id="@+id/logout"
                    android:text="Logout"
                    android:textSize="25dp"
                    android:backgroundTint="@color/colorDark"
                    android:textColor="@color/colorLight"
                    android:layout_weight="3"
                    android:layout_marginVertical="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>