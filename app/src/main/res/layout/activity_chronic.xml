<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        tools:context=".MainActivity">


    <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chronic"
            android:textColor="@color/colorDark"
            android:textSize="70dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:fontFamily="@font/architects_daughter"/>

    <ScrollView
            app:layout_constraintTop_toBottomOf="@id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width= "match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/rehablivedata"
                    android:layout_marginVertical="1dp"
                    android:layout_marginHorizontal="4dp"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/colorLight"
                    android:background="@color/colorPrimary"
                    android:layout_weight="9"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/tensionlabel"
                            android:text="Tension"
                            android:textSize="30dp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:textColor="@color/colorLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:id="@+id/tensionvalue"
                            android:text=" -- "
                            android:textSize="30dp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:textColor="@color/colorLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:id="@+id/tensionunit"
                            android:text="volts"
                            android:textSize="15dp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:textColor="@color/colorLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/posture"
                            android:text="Posture"
                            android:textSize="30dp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:textColor="@color/colorLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/posturedegrees"
                                android:text=" -- "
                                android:textSize="30dp"
                                android:textColor="@color/colorLight"
                                android:fontFamily="@font/open_sans_semibold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:text="degrees"
                                android:textSize="15dp"
                                android:layout_marginLeft="20dp"
                                android:textColor="@color/colorLight"
                                android:fontFamily="@font/open_sans_semibold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/postureohm"
                                android:text=" -- "
                                android:textSize="30dp"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/colorLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:text="ohm"
                                android:textSize="15dp"
                                android:layout_marginLeft="20dp"
                                android:textColor="@color/colorLight"
                                android:fontFamily="@font/open_sans_semibold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <Button
                    android:id="@+id/chronic"
                    android:layout_marginVertical="1dp"
                    android:text="Chronic"
                    android:textColor="@color/colorLight"
                    android:textSize="60dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_weight="9"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/open_sans_semibold"
                    android:layout_height="0dp"/>

            <Button
                    android:id="@+id/chat"
                    android:text="Chat"
                    android:textSize="40dp"
                    android:textColor="@color/colorLight"
                    android:layout_marginVertical="1dp"
                    android:backgroundTint="@color/colorPrimaryBlack"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:fontFamily="@font/open_sans_semibold"/>

            <Button
                    android:id="@+id/logout"
                    android:text="Logout"
                    android:textSize="25dp"
                    android:backgroundTint="@color/colorDark"
                    android:textColor="@color/colorLight"
                    android:layout_weight="3"
                    android:layout_marginVertical="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>